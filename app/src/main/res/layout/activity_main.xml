<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a7yan.fragmentdemo.MainActivity">

    <fragment
        android:id="@+id/ft_left"
        android:layout_width="0dp"
        class="com.example.a7yan.fragmentdemo.LeftFragment"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </fragment>
    <fragment
        android:id="@+id/ft_right"
        android:layout_width="0dp"
        android:name="com.example.a7yan.fragmentdemo.RightFragment"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </fragment>
</LinearLayout>
